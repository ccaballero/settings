background no

update_interval 1.0
double_buffer yes

use_xft yes
xftfont monospace:size=8

own_window yes
own_window_class Conky
own_window_transparent yes
own_window_type override

gap_x 20
gap_y 20
alignment bottom_right

draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no

cpu_avg_samples 2
net_avg_samples 2

out_to_console no
out_to_stderr no
uppercase no
use_spacer none

TEXT
${color white}${font :bold:size=24}${alignc}${time %H:%M:%S}${font}
${alignc}${time %A %d %B}

${color lightgray}$sysname $kernel 
$nodename!${exec whoami}

uptime:    $uptime
remaining: ${battery_time}
freq:      $freq_g GHz
cpu temp:  ${i8k_cpu_temp} C
#left fan:  ${i8k_left_fan_rpm}   ${i8k_left_fan_status}
right fan: ${i8k_right_fan_rpm}  ${i8k_right_fan_status}

battery: ${battery_percent}% ${battery_bar}
cpu:     $cpu% ${cpubar}

${offset 3} ${top pid 1}  ${top name 1} ${top cpu 1} ${top mem 1}
${offset 3} ${top pid 2}  ${top name 2} ${top cpu 2} ${top mem 2}
${offset 3} ${top pid 3}  ${top name 3} ${top cpu 3} ${top mem 3}
${offset 3} ${top pid 4}  ${top name 4} ${top cpu 4} ${top mem 4}

ram:  $memperc% ${membar}
swap: $swapperc% ${swapbar}

${offset 3}${top_mem pid 1}  ${top_mem name 1}  ${top_mem cpu 1} ${top_mem mem 1}
${offset 3}${top_mem pid 2}  ${top_mem name 2}  ${top_mem cpu 2} ${top_mem mem 2}
${offset 3}${top_mem pid 3}  ${top_mem name 3}  ${top_mem cpu 3} ${top_mem mem 3}
${offset 3}${top_mem pid 4}  ${top_mem name 4}  ${top_mem cpu 4} ${top_mem mem 4}

eth0: ${addr eth0}
eth1: ${addr eth1}
gw:   ${gw_ip}

down: ${downspeed eth1}
${offset 10}${downspeedgraph eth1 32,260}
up: ${upspeed eth1}
${offset 10}${upspeedgraph eth1 32,260}

/      ${fs_used_perc /}% ${fs_bar /}
/boot  ${fs_used_perc /boot}% ${fs_bar /boot}
/home  ${fs_used_perc /home}% ${fs_bar /home}
/usr   ${fs_used_perc /usr}% ${fs_bar /usr}
/var   ${fs_used_perc /var}% ${fs_bar /var}
/tmp   ${fs_used_perc /tmp}% ${fs_bar /tmp}
/dist  ${fs_used_perc /usr/portage/distfiles}% ${fs_bar /usr/portage/distfiles}

${font :bold:size=10}${mpd_title}${font}
${mpd_album}
${mpd_artist}
${mpd_bar}
${mpd_elapsed}/${mpd_length}${offset 100}

